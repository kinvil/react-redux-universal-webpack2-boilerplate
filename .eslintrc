{
    "parserOptions": {
        "ecmaVersion": 6,
        "sourceType": "module",
        "ecmaFeatures": {
            "jsx": true
        }
    },

    "env": {
        "browser": true,
        "node": true,
        "es6": true
    },

    "plugins": ["react"],

    "rules": {
        // Possible Errors
        "no-console": 2,
        "no-empty": 2,
        "no-extra-semi": 2,
        "no-func-assign": 2,
        "no-inner-declarations": 2,

        // Best Practices
        "curly": 2,
        "default-case": 2,
        "dot-notation": 2,
        "eqeqeq": 2,
        "no-alert": 2,
        "no-caller": 2,
        "no-eval": 2,
        "no-labels": 2,
        "no-lone-blocks": 2,
        "no-multi-spaces": 2,
        "no-multi-str": 2,
        "no-native-reassign": 2,

        "no-new": 2,
        "no-new-func": 2,
        "no-new-object": 2,
        "no-new-wrappers": 2,
        "no-octal-escape": 2,
        "no-proto": 2,
        "no-return-assign": 2,
        "no-script-url": 2,
        "no-unused-expressions": 2,
        "no-with": 2,

        // Variables
        "no-label-var": 2,
        "no-shadow": 2,
        "no-shadow-restricted-names": 2,
        "no-undef": 2,
        "no-undef-init": 2,
        "no-unused-vars": 2,

        // Stylistic Issues
        "brace-style": [1, "1tbs"],
        "camelcase": 1,
        "comma-spacing": 1,
        "eol-last": 1,
        "key-spacing": 1,
        "new-cap": 1,
        "new-parens": 1,
        "no-array-constructor": 1,
        "no-spaced-func": 1,
        "no-trailing-spaces": [1, { "skipBlankLines": true }],
        "quotes": [1, "single"],
        "semi": [1, "never"],
        "semi-spacing": [1, {"before": false, "after": true}],
        "space-infix-ops": 1,
        "space-unary-ops": [1, {words: true, nonwords: false}],
        "no-mixed-spaces-and-tabs": [1, "smart-tabs"],

        // ECMAScript 6
        "no-class-assign": 2,
        "no-const-assign": 2,
        "no-dupe-class-members": 2,
        "no-this-before-super": 2,
        "no-var": 2,

        // eslint-plugin-react
        "react/jsx-key": 2,
        "react/jsx-no-duplicate-props": 2,
        "react/jsx-no-undef": 2,
        "react/jsx-uses-react": 2,
        "react/jsx-uses-vars": 2,
        "react/no-unknown-property": 2,
        "react/prefer-es6-class": 2,
        "react/prop-types": 2,
        "react/react-in-jsx-scope": 2,
        "react/require-extension": 2,
        "react/self-closing-comp": 2,
        "react/wrap-multilines": 2
    }
}